Examples/GIFPlot/libgifplot.a:
	cd Examples/GIFPlot/Lib ; $(MAKE)

check-gifplot-example: Examples/GIFPlot/libgifplot.a
	$(skip-perl) || (cd Examples/GIFPlot/Perl/full && $(chk))
