srcdir = @srcdir@
VPATH  = @srcdir@

SRCS          = expr.c cpp.c
OBJS          = expr.@OBJEXT@ cpp.@OBJEXT@

prefix        = @prefix@
exec_prefix   = @exec_prefix@

CC            = @CC@
AR            = @AR@
RANLIB        = @RANLIB@
CFLAGS        = @CFLAGS@
INCLUDES      = -I$(srcdir)/. -I$(srcdir)/../Swig -I$(srcdir)/../DOH/Include -I$(srcdir)/../Include
TARGET        = libcpp.a

.c.@OBJEXT@:
	$(CC) $(CFLAGS) $(INCLUDES) -c -o $*.@OBJEXT@ $<

all: $(TARGET)

$(TARGET): $(OBJS)
	$(AR) cr $(TARGET) $(OBJS)
	$(RANLIB) $(TARGET)

clean:
	rm -f *.@OBJEXT@ *~ core *.so *.a *_wrap.*
