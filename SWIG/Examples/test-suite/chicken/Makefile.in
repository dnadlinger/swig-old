#######################################################################
# $Header$
# Makefile for chicken test-suite
#######################################################################

LANGUAGE     = chicken
VARIANT      = 
SCRIPTSUFFIX = _runme.ss
srcdir       = @srcdir@
top_srcdir   = @top_srcdir@
top_builddir = @top_builddir@
CHICKEN_CSI  = @CHICKEN_CSI@ -quiet
SO           = @SO@

#C_TEST_CASES = long_long list_vector pointer_in_out multivalue

include $(srcdir)/../common.mk

# Overridden variables here
SWIGOPT += -noprefix

# Rules for the different types of tests
%.cpptest: 
	$(setup) \
	($(swig_and_compile_cpp); ) && \
	$(run_testcase)

%.ctest:
	$(setup) \
	($(swig_and_compile_c); ) && \
	$(run_testcase)

%.multicpptest: 
	$(setup) \
	($(swig_and_compile_multi_cpp); ) && \
	$(run_testcase)

# Runs the testcase. A testcase is only run if
# a file is found which has _runme.scm appended after the testcase name.
run_testcase = \
	if [ -f $(srcdir)/$(SCRIPTPREFIX)$*$(SCRIPTSUFFIX) ]; then (	  \
	  env LD_LIBRARY_PATH=.:$$LD_LIBRARY_PATH $(CHICKEN_CSI) $*$(SO) $(srcdir)/$(SCRIPTPREFIX)$*$(SCRIPTSUFFIX);) \
	fi;

# Clean
%.clean:
	
clean:
	$(MAKE) -f $(top_builddir)/$(EXAMPLES)/Makefile chicken_clean
	rm -f *.scm
